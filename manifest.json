{
  "manifest_version": 2,
  "name": "Monospeed",
  "version": "1.0",
  "description": "Set video speed once, have it applied everywhere.",
  "icons": {
    "18": "icons/m-icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "background.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup/vidspeed.html"
  }
}
